# =====================================
# Application
# =====================================
NODE_ENV=production
PORT=5000

# =====================================
# Database
# =====================================
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/doconnect?retryWrites=true&w=majority

# =====================================
# Authentication
# =====================================
# Generate with: openssl rand -base64 64
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_GENERATE_WITH_OPENSSL
JWT_EXPIRE=30d

# =====================================
# Payment Integration - Stripe
# =====================================
# Get from: https://dashboard.stripe.com/apikeys (LIVE mode)
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET
STRIPE_PRICE_BASIC=price_YOUR_LIVE_BASIC_PRICE_ID
STRIPE_PRICE_PROFESSIONAL=price_YOUR_LIVE_PROFESSIONAL_PRICE_ID
STRIPE_PRICE_ENTERPRISE=price_YOUR_LIVE_ENTERPRISE_PRICE_ID
STRIPE_ENABLE_TAX=false

# =====================================
# Client Configuration
# =====================================
CLIENT_URL=https://yourdomain.com
# STRIPE_WEBHOOK_ENDPOINT_URL=https://your-app.railway.app/api/subscriptions/webhook

# =====================================
# Caching - Redis (Optional)
# =====================================
# REDIS_URL=redis://default:YOUR_PASSWORD@redis-xxxxx.cloud.redislabs.com:12345
# REDIS_URL=rediss://default:YOUR_PASSWORD@xxxxx.upstash.io:6379

# =====================================
# Real-time - Socket.IO
# =====================================
SOCKET_MAX_CONNECTIONS=1000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# =====================================
# Storage - Cloudinary
# =====================================
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# =====================================
# Email Configuration
# =====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=YOUR_APP_SPECIFIC_PASSWORD
EMAIL_FROM=noreply@yourdomain.com

# =====================================
# Security Settings
# =====================================
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10
SESSION_TIMEOUT=86400000

# =====================================
# Logging & Monitoring (Optional)
# =====================================
# SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID
LOG_LEVEL=info

# =====================================
# News API - NewsAPI.org
# =====================================
NEWSAPI_KEY=your_newsapi_org_key_here
